{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [ "dom", "es6" ],
        "declaration": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage"
    ]
}